<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".setCaloryGoalbyraghav">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter calorie goal"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />
    <TextView
        android:id="@+id/calorieText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="450"
        android:textSize="42sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
    />

    <SeekBar
        android:id="@+id/seekBarCal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/calorieText"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:progress="25"
        />
    <Button
        android:id="@+id/confirmDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Goal"
        android:layout_below="@+id/seekBarCal"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>